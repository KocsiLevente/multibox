Paladin Buffs)
/target Gaelber
/script bless_of_light()
/target Kearlah
/script bless_of_wis()
/target Dreamblast
/script bless_of_wis()
/target Dorkilla
/script bless_of_kings()
/target Havox
/script bless_of_kings()
/target Dorothy
/script bless_of_kings()

LUA)
function bless_of_light()
local i,x=1,0
while (UnitBuff("target",i))
do if (UnitBuff("target",i)=="Interface\\Icons\\Spell_Holy_GreaterBlessingofLight")
then x=1
end
i=i+1
end
if (x==0)
then cast("Greater Blessing of Light")
end
end

function bless_of_wis()
local i,x=1,0
while (UnitBuff("target",i))
do if (UnitBuff("target",i)=="Interface\\Icons\\Spell_Holy_GreaterBlessingofWisdom")
then x=1
end
i=i+1
end
if (x==0)
then cast("Greater Blessing of Wisdom")
end
end

function bless_of_kings()
local i,x=1,0
while (UnitBuff("target",i))
do if (UnitBuff("target",i)=="Interface\\Icons\\Spell_Magic_GreaterBlessingofKings")
then x=1
end
i=i+1
end
if (x==0)
then cast("Greater Blessing of Kings")

Paladin Buffs)
/target Gaelber
/script blessing_of_light()
/target Kearlah
/script blessing_of_wisdom()
/target Dreamblast
/script blessing_of_wisdom()
/target Dorkilla
/script blessing_of_kings()
/target Havox
/script blessing_of_kings()

LUA)
function blessing_of_light()
local i,x=1,0
while (UnitBuff("target",i))
do if (UnitBuff("target",i)=="Interface\\Icons\\Spell_Holy_GreaterBlessingofLight")
then x=1
end
i=i+1
end
if (x==0)
then cast("Greater Blessing of Light")
end
end

function blessing_of_wisdom()
local i,x=1,0
while (UnitBuff("target",i))
do if (UnitBuff("target",i)=="Interface\\Icons\\Spell_Holy_GreaterBlessingofWisdom")
then x=1
end
i=i+1
end
if (x==0)
then cast("Greater Blessing of Wisdom")
end
end

function blessing_of_kings()
local i,x=1,0
while (UnitBuff("target",i))
do if (UnitBuff("target",i)=="Interface\\Icons\\Spell_Holy_GreaterBlessingofKings")
then x=1

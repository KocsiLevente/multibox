Cleanse)
/script cleanse_prio()

LUA)
function cleanse()
for x=1,16 do
local name,count,debuffType=UnitDebuff("target",x,1)
if (debuffType=="Magic" or debuffType=="Disease" or debuffType=="Poison")
then
cast("Cleanse")
end
end
end

function heal_after_cleanse()
heal_raid()
end

function cleanse_prio()
TargetByName("Llanewrynn")
cleanse()
TargetByName("Yxon")
cleanse()
TargetByName("Illumyn")
cleanse()
TargetByName("Paladino")
cleanse()
TargetByName("Kearlah")
cleanse()
cleanse_raid()
heal_after_cleanse()
end

function cleanse_raid()
TargetUnit("raid1")
cleanse()
TargetUnit("raid2")
cleanse()
TargetUnit("raid3")
cleanse()
TargetUnit("raid4")
cleanse()
TargetUnit("raid5")
cleanse()
TargetUnit("raid6")
cleanse()
TargetUnit("raid7")
cleanse()
TargetUnit("raid8")
cleanse()
TargetUnit("raid9")
cleanse()
TargetUnit("raid10")
cleanse()
TargetUnit("raid11")
cleanse()
TargetUnit("raid12")
cleanse()
TargetUnit("raid13")
cleanse()
TargetUnit("raid14")
cleanse()
TargetUnit("raid15")
cleanse()
TargetUnit("raid16")
cleanse()
TargetUnit("raid17")
cleanse()
TargetUnit("raid18")
cleanse()
TargetUnit("raid19")
cleanse()
TargetUnit("raid20")
cleanse()
end

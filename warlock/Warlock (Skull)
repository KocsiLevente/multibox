Warlock (Skull))
/script dps_skull()

LUA)
function dps_skull()
if (GetRaidTargetIndex("target")==8)
then
attack()
else
target_skull()
end
end

function attack()
if (UnitMana("player")>=376)
then
PickupAction(63)
PlaceAction(62)
shadow_bolt()
else
if (UnitHealth("player")/UnitHealthMax("player")>0.3)
then
cast("Life Tap")
else
if not IsCurrentAction(62)
then
UseAction(62)
PickupAction(62)
PlaceAction(63)
end
end
end
end

function shadow_bolt()
cast("Shadow Bolt")
end

function target_skull()
TargetByName("Gaelber")
TargetUnit("targettarget")
if (GetRaidTargetIndex("target")==8)
then
return
else
TargetByName("Llanewrynn")
TargetUnit("targettarget")
end
if (GetRaidTargetIndex("target")==8)
then
return
else
TargetByName("Yxon")
TargetUnit("targettarget")
end
if (GetRaidTargetIndex("target")==8)
then
return
else
tab_target_skull()
end
end

function tab_target_skull()
for i=1,10
do TargetNearestEnemy()
if (GetRaidTargetIndex("target")==8)
then
return
else
TargetUnit("player")
end
end
end

Tank (Cross))
/script tank_cross()

LUA)
function tank_cross()
if (GetRaidTargetIndex("target")==7)
then
tank()
else
tab_target_cross()
end
end

function tank()
if (UnitMana("player")>=12)
then
cast("Shield Slam")
cast("Revenge")
cast("Sunder Armor")
else
cast("Bloodrage")
end
end

function tab_target_cross()
for i=1,10
do TargetNearestEnemy()
if (GetRaidTargetIndex("target")==7)
then
SendChatMessage("Targeted %t!")
return
else
TargetUnit("player")
end
end
end

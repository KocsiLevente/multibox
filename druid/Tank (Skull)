Tank (Skull))
/script tank_skull()

LUA)
function tank_skull()
if (GetRaidTargetIndex("target")==8)
then
tank()
else
tab_target_skull()
end
end

function tank()
if (UnitMana("player")>=25)
then
cast("Swipe")
end
if (UnitMana("player")>=10)
then
cast("Maul")
else
cast("Enrage")
end
end

function tab_target_skull()
for i=1,10
do TargetNearestEnemy()
if (GetRaidTargetIndex("target")==8)
then
return
else
TargetUnit("player")
end
end
end

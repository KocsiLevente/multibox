Druid Buffs)
/target Skyfire
/script gift_wild()
/target Gaelber
/script gift_wild()
/script thorns()
/target Dreamblast
/script gift_wild()
/target Uyalin
/script gift_wild()
/target Llanewrynn
/script thorns()

LUA)
function gift_wild()
local i,x=1,0
while (UnitBuff("target",i))
do if (UnitBuff("target",i)=="Interface\\Icons\\Spell_Nature_Regeneration")
then x=1
end
i=i+1
end
if (x==0)
then cast("Gift of the Wild")
end
end

function thorns()
local i,x=1,0
while (UnitBuff("target",i))
do if (UnitBuff("target",i)=="Interface\\Icons\\Spell_Nature_Thorns")
then x=1
end
i=i+1
end
if (x==0)
then cast("Thorns")
end
end

Decurse)
/target Yxon
/script decurse()
/target Dreamblast
/script decurse()
/target Illumyn
/script decurse()
/target Skyfire
/script decurse()
/target Lazarrus
/script decurse()

LUA)
function decurse()
for x=1,16 do
local name,count,debuffType=UnitDebuff("target",x,1)
if debuffType=="Curse"
then
cast("Remove Curse")
end
end
end

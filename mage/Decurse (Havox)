Decurse)
/target Gaelber
/script decurse()
/target Kearlah
/script decurse()
/target Havox
/script decurse()
/target Dorkilla
/script decurse()
/target Dorothy
/script decurse()

LUA)
function decurse()
for x=1,16 do
local name,count,debuffType=UnitDebuff("target",x,1)
if debuffType=="Curse"
then
cast("Remove Lesser Curse")
end
end
end

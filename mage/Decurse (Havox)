Decurse)
/script decurse_prio()

LUA)
function decurse()
for x=1,16 do
local name,count,debuffType=UnitDebuff("target",x,1)
if debuffType=="Curse"
then
cast("Remove Lesser Curse")
end
end
end

function dps_after_decurse()
TargetByName("Gaelber")
TargetUnit("targettarget")
dps_cross()
end

function decurse_prio()
TargetByName("Gaelber")
decurse()
TargetByName("Llanewrynn")
decurse()
TargetByName("Kearlah")
decurse()
TargetByName("Illumyn")
decurse()
TargetByName("Dreamblast")
decurse()
decurse_raid()
dps_after_decurse()
end

function decurse_raid()
TargetUnit("raid1")
decurse()
TargetUnit("raid2")
decurse()
TargetUnit("raid3")
decurse()
TargetUnit("raid4")
decurse()
TargetUnit("raid5")
decurse()
TargetUnit("raid6")
decurse()
TargetUnit("raid7")
decurse()
TargetUnit("raid8")
decurse()
TargetUnit("raid9")
decurse()
TargetUnit("raid10")
decurse()
TargetUnit("raid11")
decurse()
TargetUnit("raid12")
decurse()
TargetUnit("raid13")
decurse()
TargetUnit("raid14")
decurse()
TargetUnit("raid15")
decurse()
TargetUnit("raid16")
decurse()
TargetUnit("raid17")
decurse()
TargetUnit("raid18")
decurse()
TargetUnit("raid19")
decurse()
TargetUnit("raid20")
decurse()
end

Mage AF (Skull))
/script dps_skull()

LUA)
function dps_skull()
if (GetRaidTargetIndex("target")==8)
then
attack()
else
target_skull()
end
end

function attack()
local evoc, dur_evoc, en_evoc = GetActionCooldown(61)
if not CastingBarFrame.channeling
then
if (UnitMana("player")>=260)
then
PickupAction(63)
PlaceAction(62)
arcane_frost()
else
if (evoc==0)
then
cast("Evocation")
else
if not IsCurrentAction(62)
then
UseAction(62)
PickupAction(62)
PlaceAction(63)
end
end
end
end
end

function arcane_frost()
local start, duration, enable = GetActionCooldown(64)
if (start==0)
then
cast("Arcane Power")
else
cast("Presence of Mind")
cast("Frostbolt")
end
end

function target_skull()
TargetByName("Gaelber")
TargetUnit("targettarget")
if (GetRaidTargetIndex("target")==8)
then
return
else
TargetByName("Llanewrynn")
TargetUnit("targettarget")
end
if (GetRaidTargetIndex("target")==8)
then
return
else
TargetByName("Yxon")
TargetUnit("targettarget")
end
if (GetRaidTargetIndex("target")==8)
then
return
else
tab_target_skull()
end
end

function tab_target_skull()
for i=1,10
do TargetNearestEnemy()
if (GetRaidTargetIndex("target")==8)
then
return
else
TargetUnit("player")
end
end
end
